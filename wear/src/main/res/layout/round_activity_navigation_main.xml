<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:keepScreenOn="true"
    tools:context=".NavigationMain"
    tools:deviceIds="wear_round"
    android:rowCount="3"
    android:columnCount="3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/progressIndicator"
        android:background="@color/green"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="bottom" />

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/blurred_map"
        android:layout_margin="3dp">

        <GridLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:columnCount="1"
            android:rowCount="2"
            android:weightSum="1"
            android:background="@color/white">

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/currentPosition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:gravity="center_horizontal"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:text="Sample St. alsd kasjgd lkjaslkg askjl lka"
                android:textSize="15sp"
                android:textColor="@color/black" />
        </GridLayout>
        <GridLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:columnCount="2"
            android:rowCount="2"
            android:background="@color/white">

            <TextView
                android:id="@+id/directionMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechts abbiegen auf Dummy St."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginRight="65dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/directionImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_column="0"
                android:contentDescription="Direction"
                android:src="@mipmap/turn_right"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:text="400 m"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_column="1" />
        </GridLayout>
    </ViewFlipper>
</GridLayout>

